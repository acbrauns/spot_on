<div class="grid_view">


    <% @events.reverse_each do |event| %>
      <div class="col-xs-3 grid-container">
        <header class="tile_header">
          <p><b><%= (event.start_date).strftime("%a")%>, <%= (event.start_date).strftime("%m/%d")%><br>
            <%= (event.start_time).strftime("%I:%M %p") %>
          </b></p>
        </header>
        <div class="tile_text">
          <p><b><%= event.title %></b></p>
          <p><%= event.location %></p>
        </div>
      </div>
    <% end %>

</div>
